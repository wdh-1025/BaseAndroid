<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_mddialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_md_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="MDAlert"
        android:text="MD风格提示框" />

    <Button
        android:id="@+id/btn_md_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="MDSelect"
        android:text="MD风格选择框" />

    <Button
        android:id="@+id/btn_md_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="MDEdit"
        android:text="MD风格编辑框" />

    <Button
        android:id="@+id/btn_sheet_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="BottomSheetDialog"
        android:text="BottomSheetDialog" />
</LinearLayout>
